{
  "name": "@aspnet/signalr",
  "version": "1.0.0-preview1-t000",
  "description": "ASP.NET Core SignalR Client",

  "main": "./dist/cjs/index.js",
  "browser": "./dist/signalr.umd.js",
  "module": "./dist/esm/index.js",
  "typings": "./dist/typings/index.d.ts",
  "umd_name": "signalR",

  "directories": {
    "test": "spec"
  },
  "scripts": {
    "clean": "node ../node_modules/rimraf/bin.js ./dist",
    "build": "npm run clean && npm run build:tsc && npm run build:cjs && npm run build:umd",
    "build:tsc": "tsc --project ./tsconfig.json",
    "build:cjs": "tsc --project ./tsconfig.json --module commonjs --outDir ./dist/cjs --target ES2015"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aspnet/SignalR.git"
  },
